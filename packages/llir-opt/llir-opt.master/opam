build: [
  [
    "cmake" "."
    "-DCMAKE_BUILD_TYPE=Release"
    "-DLLVM_DIR=%{prefix}%/llvm/lib/cmake/llvm"
    "-DCMAKE_INSTALL_PREFIX=%{prefix}%"
    "-DCMAKE_C_COMPILER=gcc"
    "-DCMAKE_CXX_COMPILER=g++"
  ]
  [ make "-j" jobs ]
  [ "./test.py" ] { with-test }
]
install: [
  [ make "install" ]
  # X86_64
  [ "ln" "-s" "%{bin}%/llir-ar" "%{bin}%/llir_x86_64-unknown-linux-musl-ar" ]
