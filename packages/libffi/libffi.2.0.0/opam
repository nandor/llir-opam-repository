  [ "sh" "-x" "autogen.sh"]
  [ "sh" "-x" "configure" "--prefix=%{prefix}%" ]
  [ make "-j%{jobs}%" ]
  [ make "install" ]
]
install: [
  [ make "install" ]
]
depends: [
  "llir-musl"
]
synopsis: "libffi compiled for LLIR"
